{
  "version": 2,
  "buildCommand": "npm install",
  "env": {
    "GEMINI_API_KEY": "@gemini_api_key",
    "MONGODB_URI": "@mongodb_uri",
    "JWT_SECRET": "@jwt_secret",
    "JWT_EXPIRE": "7d",
    "NODE_ENV": "production",
    "CORS_ORIGIN": "@cors_origin"
  },
  "functions": {
    "server.js": {
      "runtime": "nodejs18.x",
      "memory": 3008,
      "maxDuration": 60,
      "environment": {
        "GEMINI_API_KEY": "@gemini_api_key",
        "MONGODB_URI": "@mongodb_uri",
        "JWT_SECRET": "@jwt_secret"
      }
    }
  },
  "routes": [
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}
